<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".OnBoardingActivity.Form.form_Signup2">

    <LinearLayout
        android:id="@+id/block_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_double_edit_text"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:hint="@string/first_name"
            android:background="@drawable/form_edit_text_pwd"
            android:textSize="20sp"
            android:inputType="textPersonName|textNoSuggestions|textCapWords" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separateur" />

        <EditText
            android:id="@+id/et_family_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:hint="@string/surname"
            android:background="@drawable/form_edit_text_pwd"
            android:textSize="20sp"
            android:inputType="textPersonName|textNoSuggestions|textCapWords" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_sl_deactivated"
        android:textColor="@color/btn_form_text_off"
        android:text="SIGN UP!"
        android:textSize="20sp"/>

</LinearLayout>
