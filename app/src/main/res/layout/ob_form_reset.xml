<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".OnBoardingActivity.Form.form_Reset">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_recovery_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:hint="Enter your email to reset your password"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/et_email_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/form_edit_text_focus"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_reset_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sl_activated"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="@string/send_recovery_email"
        android:textSize="16sp" />

</LinearLayout>
