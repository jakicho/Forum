<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="-3dp"
    android:layout_marginStart="-3dp"
    android:layout_marginRight="-3dp"
    android:layout_marginEnd="-3dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical">

    <!-- row -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">

        <!--
         card_view:cardUseCompatPadding="true"
         android:background="@drawable/button_sl_mini_card" -->


        <LinearLayout
            android:id="@+id/btn_open_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_sl_mini_card"
            android:orientation="vertical">
            <FrameLayout
                android:visibility="gone"
                android:id="@+id/no_header"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <LinearLayout
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:id="@+id/btn_other_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/button_sl_mini_card">

                <ImageView
                    android:id="@+id/img_profil_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_sl_mini_card"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:src="@drawable/profil_pict" />

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center|start"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_other_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="other_user"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_last_timestamp_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="1mo ago"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>
            
            <ImageView
                android:id="@+id/first_pict"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tv_story_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Bold Story Title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_last_timestamp_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="1mo ago"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_story_excerpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Le chaton est tout gris, il passe son temps à faire dodo et à chasser les moucherons qui tournoient au dessus de sa litiere\"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:gravity="start"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tag_topic"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingStart="7dp"
                        android:paddingLeft="7dp"
                        android:paddingEnd="7dp"
                        android:paddingRight="7dp"
                        android:background="@drawable/tag_bg4"
                        android:textColor="@color/tag_tx_off2"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#yolo"/>

                    <TextView
                        android:id="@+id/tv_lenght_count"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:alpha="0.8"
                        android:gravity="end"
                        android:paddingEnd="1dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="1dp"
                        android:paddingStart="0dp"
                        android:text="10"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="0dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_script_black_48dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

