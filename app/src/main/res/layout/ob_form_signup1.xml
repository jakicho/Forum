<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".OnBoardingActivity.Form.form_Signup1">

    <EditText
        android:id="@+id/et_signup_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/form_edit_text"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/block_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/form_double_edit_text"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:padding="10dp"
                android:id="@+id/et_signup_pwd_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/form_edit_text_pwd"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_pwd_valid_1"
                android:alpha="0.4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_checkbox_marked_circle_green" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separateur" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_signup_pwd_2"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/form_edit_text_pwd"
                android:hint="@string/repeat_password"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_pwd_valid_2"
                android:alpha="0.4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_checkbox_marked_circle_green" />
        </LinearLayout>

    </LinearLayout>

    <!-- style="?android:attr/borderlessButtonStyle" -->
    <Button
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sl_deactivated"
        android:text="GO"
        android:textColor="@color/btn_form_text_off"
        android:textSize="20sp" />


</LinearLayout>
