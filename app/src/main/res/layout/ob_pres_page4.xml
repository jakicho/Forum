<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <!-- android:src="@drawable/tuto_04" -->
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/top_title"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Search for specific thoughts, advices, conversations by combining tags..."
        android:textSize="20sp"
        android:background="@color/colorAccent"
        android:textStyle="normal" />

    <FrameLayout
        android:layout_below="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/gradient_blue2"/>


    <FrameLayout
        android:layout_above="@+id/bottom_tile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/gradient_blue3"/>

    <TextView
        android:id="@+id/bottom_tile"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="...and find the best content\naccording to the community"
        android:background="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="normal" />

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/gradient_blue"/>

</RelativeLayout>